<div class="d-flex align-items-center">
  <h1>感情分析掲示板</h1>
  <div class="ml-auto boards__linkBox">
    <%= link_to "新規作成", new_board_path, class: "btn btn-outline-dark" %>
  </div>
</div>
<table class="table table-hover boards__table">
  <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>作成者</th>
      <th>作成日時</th>
      <th>更新日時</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @board.each do |board| %>
    <tr>
      <td><%= board.id %></td>
      <td><%= board.title %></td>
      <td><%= board.name %></td>
      <td><%= board.created_at.to_s(:datetime_jp) %></td>
      <td><%= board.updated_at.strftime('%Y年 %m月 %d日 %H時 %M分') %></td>
      <td><%= link_to '詳細', board, class: 'btn btn-outline-dark' %></td> 
    </tr>
    <% end %>
  </tbody>
</table>